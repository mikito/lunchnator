source 'https://rubygems.org'

# Essentials
gem 'rails', '4.2.4'
gem 'jbuilder', '~> 2.0'

# ActiveRecord Ext
gem 'mysql2', '~> 0.3.20'
gem 'activerecord-colored_log_subscriber'
gem 'kaminari'
gem 'kaminari-i18n'

# Authentication
gem 'devise'
gem 'devise-i18n'

# Assets
gem 'sass-rails', '~> 5.0'
gem 'bootstrap-sass', '~> 3.3.5'
gem 'jquery-rails'
gem 'turbolinks'
gem 'coffee-rails', '~> 4.1.0'
gem 'uglifier', '>= 1.3.0'

# Deployment
gem 'capistrano-rails'

group :development, :test do
  gem 'byebug'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :development do
  gem 'annotate'
  gem 'quiet_assets'
  gem 'web-console', '~> 2.0'
end
