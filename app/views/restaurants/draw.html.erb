<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">今日のランチはここに決定しました</h3>
  </div>
  <div class="panel-body">
  	<table class="table table-striped table-hover ">
      <tbody>
      	<tr>
      		<td>
      			<%= link_to @restaurant.name , @restaurant.url %>
      		</td>
    		</tr>
    		<tr>
    		<td>
        <%= @restaurant.category_name_l %>
        </td>
        </tr>
    		<tr>
      		<td>
      			ランチタイム<br>
      			<%= @restaurant.opentime %>
      		</td>
    		</tr>
    		<tr>
      		<td>
        	  <% if @restaurant.image_url_1? && @restaurant.image_url_1 != "{}" %>
		        <%= image_tag @restaurant.image_url_1 , :size => '200x200' %>
		        <% end %>
		        <% if @restaurant.image_url_2? && @restaurant.image_url_2 != "{}" %>
		        <%= image_tag @restaurant.image_url_2 , :size => '200x200' %>
		        <% end %>
      		</td>
      	</tr>
      </tbody>
    </table> 
  </div>
</div>


