<table class="table table-striped table-hover ">
  <tbody>
<% @restaurants.each do |restaurant| %>
    <tr class="info">
      <td><%= link_to restaurant.name , restaurant.url %></td>
      </tr><tr>
      <td>
        ランチタイム<br>
      	<%= restaurant.opentime %>
      </td>
      </tr><tr>
      <td>
      <%= restaurant.category_name_l %>
      </td>
      </tr><tr>
      <td>
      	<% if restaurant.image_url_1? && restaurant.image_url_1 != "{}" %>
        <%= image_tag restaurant.image_url_1 , :size => '256x256' %>
        <% end %>
        <% if restaurant.image_url_2? && restaurant.image_url_2 != "{}" %>
        <%= image_tag restaurant.image_url_2 , :size => '256x256' %>
        <% end %>
      </td>
      </tr>
<% end %>
</tbody>
</table> 

<%= paginate @restaurants %>
